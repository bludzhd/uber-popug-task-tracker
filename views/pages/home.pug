extends ../layout.pug

block content
  //- Header
  header.masthead.bg-primary.text-white.text-center
    .container
      img.img-fluid.mb-3.d-block.mx-auto(src="public/images/profile.png", alt="", style="width: 25%;")
      h1.text-uppercase.mb-0 #{global.process.env.APP_NAME}
      hr.star-light
      h2.font-weight-light.mb-0 #{global.process.env.APP_DESCRIPTION}

  //- Footer
  include ../includes/footer.pug
